<div class="form-popup" id="myUpdateForm">
  <form action="overdose" class="form-container">
    <h1>Update Form</h1>

    <label for="state"><b>State</b></label>
    <input type="text" id = "Ustate" placeholder="Enter State Name" name="state" required>

    <label for="pop"><b>Population</b></label>
    <input type="text" id = "Upopulation" placeholder="Enter Population of state" name="pop" required>
    
    <label for="death"><b>Deaths</b></label>
    <input type="text" id = "Udeath" placeholder="Enter no. of deaths caused by opm overdose" name="death" required>
    
    <label for="abbr"><b>State Abbreviation</b></label>
    <input type="text" id = "Uabbreviation" placeholder="Enter Abbreviation for state" name="abbr" required>

    <button type="submit" id = "submitUpdate" class="btn">Update Record</button>
    <button type="button" class="btn cancel" onclick="closeForm()">Close</button>
  </form>
</div>

<table id="DrugOverdoseTable">
        <thead>
          <tr>
            <th>State</th>
            <th>Population</th>
            <th>Deaths</th>
            <th>Abbrev</th>
            <th>Delete</th>
            <th>Update</th>
            
  
          </tr>
        </thead>
  
        <tbody>
          <% for(var i=0; i < data.length; i++) { %>
         <tr>
  
           <td><%= data[i].State %></td>
           <td><%= data[i].Population %></td>
           <td><%= data[i].Deaths %></td>
           <td><%= data[i].Abbrev %></td> 
           <td> <button id = <%= data[i].id %> onclick = "passID(this.id)"> Delete </button></td>
           <td> <button id = <%= data[i].id %> onclick = "updateID(this.id)"> Update </button></td>
           
  
         </tr>
      <% } %>
        </tbody>
  
      </table>

<script>
  function passID(clickedID) {
    var settings = {
      "async": true,
      "crossDomain": true,
      "url": "http://localhost:3000/"+clickedID+"/delete",
      "method": "DELETE",
      "headers": {
        "Cache-Control": "no-cache"
      }
    }
  
    $.ajax(settings).done(function (response) {
      alert("DATA DELETED!");
      document.location.reload();
    });
  }

  function updateID(clickedID) {
      openUpdateForm();

      $( "#submitUpdate" ).click( function( event ) {
      event.preventDefault();
      state_name = document.getElementById("Ustate").value;
      population = document.getElementById("Upopulation").value;
      death = document.getElementById("Udeath").value;
      abbr = document.getElementById("Uabbreviation").value; 

      data_val = {
        "State":state_name,
        "Population":population,
        "Deaths":death,
        "Abbrev":abbr
      }

      data_string_update = JSON.stringify(data_val);
      var settings = {
        "async": true,
        "crossDomain": true,
        "url": "http://localhost:3000/"+clickedID+"/update",
        "method": "PUT",
        "headers": {
        "Content-Type": "application/json",
        "Cache-Control": "no-cache"
        },
        "processData": false,
        "data": data_string_update
      }
      $.ajax(settings).done(function (response) {
        alert("DATA UPDATED!")
        closeForm();
        document.location.reload();

      });

      } );
    }
</script>

